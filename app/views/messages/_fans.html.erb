<div class="fans">
  <% if current_user == user %>
    <h2>Whom Following You</h2>
  <% else %>
    <h2>Whom Following <%=h user.full_name %></h2>
  <% end %>
  <% unless user.fans.blank? %>
    <ul class="people">
      <% user.fans.each do |fan| %>
        <li>
          <%=link_to image_tag(fan.avatar_url_thumb), stream_path(fan.username) %><br/>
          <%=link_to fan.username, stream_path(fan.username) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
