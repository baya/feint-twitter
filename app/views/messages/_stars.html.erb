<div class="stars">
  <% if current_user == user %>
    <h2>You Following Who</h2>
  <% else %>
     <h2><%=h user.full_name %> Following Who</h2>
  <% end %>
  <% unless user.stars.blank? %>
    <ul class="people">
      <% user.stars.each do |star| %>
        <li>
          <%=link_to image_tag(star.avatar_url), stream_path(star.username) %><br/>
          <%=link_to star.username, stream_path(star.username) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
