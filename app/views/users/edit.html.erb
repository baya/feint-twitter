<h1>Editing user</h1>

<% form_for(@user, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label "full name" %><br />
    <%= f.text_field :full_name %>
  </p>
  <p>
    <%= f.label :bio %><br />
    <%= f.text_area :bio, :class => "bio" %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit 'Update', :class => "submit" %>
  </p>
<% end %>
