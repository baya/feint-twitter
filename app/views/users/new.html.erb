<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "login name" %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label "full name" %><br />
    <%= f.text_field :full_name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label "password" %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label "password confirm"%>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </p>
  <p>
    <%= f.submit 'submit' %>
  </p>
<% end %>
